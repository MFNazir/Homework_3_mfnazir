<p id="notice"><%= notice %></p>

<h1>Metalitems</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metalitems.each do |metalitem| %>
      <tr>
        <td><%= metalitem.description %></td>
        <td><%= metalitem.quantity %></td>
        <td><%= metalitem.unit_price %></td>
        <td><%= link_to 'Show', metalitem %></td>
        <td><%= link_to 'Edit', edit_metalitem_path(metalitem) %></td>
        <td><%= link_to 'Destroy', metalitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metalitem', new_metalitem_path %>
